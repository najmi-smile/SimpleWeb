
@model SimpleWeb.Areas.Admin.ViewModels.UsersNew
<div class="container">
    <h1>New User</h1>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(f => f.UserName)
            @Html.TextBoxFor(f => f.UserName, new { @class = "form-control", type = "text" })
        </div>
        <div class="form-group">
            @Html.LabelFor(f => f.Email)
            @Html.TextBoxFor(f => f.Email, new { @class = "form-control", type = "email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(f => f.Password)
            @Html.PasswordFor(f => f.Password, new { @class = "form-control", type = "password" })
        </div>
        <input type="submit" value="Create User" class="btn btn-primary" />
        <a href="@Url.Action("index")">or Cancel</a>
    }
</div>

